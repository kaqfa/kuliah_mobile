<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">	    	    
	    
	   <Button
		    android:id="@+id/relLayoutBtn"
		    style="@style/newButton"
		    android:text="@string/button_text"
		    android:onClick="changeActivity" />
	   
	   <Button
		    android:id="@+id/fragmentDemoBtn"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Fragment Demo"
		    android:onClick="changeActivity" />
	   
	   <Button
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Style Demo"
		    android:onClick="changeActivity" />
	   
	   <Button
	       	android:id="@+id/listViewBtn"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="ListView Demo"
		    android:onClick="changeActivity" />
	   
	   <Button
	       	android:id="@+id/tabBtn"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Tab Navigation Demo"
		    android:onClick="changeActivity" />
	    
	</LinearLayout>
</ScrollView>